@model CoworkingGestion.Models.Espacio
@{
    ViewData["Title"] = "Detalles del Espacio";

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Detalles del Espacio</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.Ubicacion</dd>
        <dt class="col-sm-2">Capacidad</dt>
        <dd class="col-sm-10">@Model.Capacidad</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
        <dt class="col-sm-2">Costo</dt>
        <dd class="col-sm-10">@Model.Costo.ToString("C")</dd>
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.IdEspacio" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>