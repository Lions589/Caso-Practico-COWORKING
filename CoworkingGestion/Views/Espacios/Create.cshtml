@model CoworkingGestion.Models.Espacio
@{
    ViewData["Title"] = "Crear Espacio";

    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Crear Espacio</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ubicacion"></label>
        <input asp-for="Ubicacion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Capacidad"></label>
        <input asp-for="Capacidad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Costo"></label>
        <input asp-for="Costo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>