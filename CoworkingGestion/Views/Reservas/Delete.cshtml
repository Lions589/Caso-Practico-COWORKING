@model CoworkingGestion.Models.Reserva

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Eliminar Reserva";
}

<h2>Eliminar Reserva</h2>

<h3>¿Estás seguro de que deseas eliminar esta reserva?</h3>
<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.IdReserva
        </dd>
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Model.IdUsuarioNavigation.Nombre @Model.IdUsuarioNavigation.Apellido
        </dd>
        <dt class="col-sm-2">
            Espacio
        </dt>
        <dd class="col-sm-10">
            @Model.IdEspacioNavigation.Nombre
        </dd>
        <dt class="col-sm-2">
            Fecha Reserva
        </dt>
        <dd class="col-sm-10">
            @(Model.FechaReserva.HasValue ? Model.FechaReserva.Value.ToString("g") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Fecha Inicio
        </dt>
        <dd class="col-sm-10">
            @Model.FechaInicio.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Fecha Fin
        </dt>
        <dd class="col-sm-10">
            @Model.FechaFin.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Model.Estado
        </dd>
        <dt class="col-sm-2">
            Costo
        </dt>
        <dd class="col-sm-10">
            @Model.Costo.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReserva" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>



    </form>
</div>
